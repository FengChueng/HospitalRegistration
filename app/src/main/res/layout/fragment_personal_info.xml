<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@mipmap/portraint_default"
            android:id="@+id/user_portrait"
            android:layout_marginTop="10dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:elevation="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_layout_shape"
        >
        <LinearLayout
            style="@style/setting_item_style"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/setting_item_textview_style"
                android:text="账 号："
                />

            <TextView
                android:id="@+id/account_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="18380584934"
                />
        </LinearLayout>
        <View
            android:background="#ccc"
            android:layout_width="match_parent"
            android:layout_height="3px"/>
        <LinearLayout
            style="@style/setting_item_style"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/setting_item_textview_style"
                android:text="姓 名："
                />
            <TextView
                android:id="@+id/name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="陈珏蓓"
                />
        </LinearLayout>
        <View
            android:background="#ccc"
            android:layout_width="match_parent"
            android:layout_height="3px"/>
        <LinearLayout
            style="@style/setting_item_style"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_sex_title"
                style="@style/setting_item_textview_style"
                android:text="性 别："
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/sex_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="女"
                />
        </LinearLayout>
        <View
            android:background="#ccc"
            android:layout_width="match_parent"
            android:layout_height="3px"/>
        <LinearLayout
            style="@style/setting_item_style"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/setting_item_textview_style"
                android:text="生 日："
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/birthday_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="1994-01-14"
                />
        </LinearLayout>
        <View
            android:background="#ccc"
            android:layout_width="match_parent"
            android:layout_height="3px"/>
        <LinearLayout
            style="@style/setting_item_style"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/setting_item_textview_style"
                android:text="电 话："
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/mobilephone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="18380584934"
                />
        </LinearLayout>
        <View
            android:background="#ccc"
            android:layout_width="match_parent"
            android:layout_height="3px"/>
    </LinearLayout>

    <LinearLayout
        style="@style/setting_item_style"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <TextView
            style="@style/setting_item_textview_style"
            android:text="退出登录"
            android:id="@+id/logout" />
    </LinearLayout>

</LinearLayout>